# Database Configuration
# Note: When using Docker Compose, external port is 5437, internal port is 5432
# For local development, use DB_PORT=5437 if connecting to Docker container
DB_USERNAME=yushan_user
DB_PASSWORD=change_me_in_production
DB_NAME=yushan_user
DB_HOST=postgres
DB_PORT=5432  # Internal port (container-to-container). External port is 5437 in docker-compose.yml

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=YushanUserServiceJWTSecretKey2024ForSecureTokenGeneration

# Mail Configuration
MAIL_HOST=smtp.example.com
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_app_password
MAIL_PORT=465

# Server Configuration
SERVER_PORT=8081

# Eureka Configuration
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://eureka:8761/eureka/

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker